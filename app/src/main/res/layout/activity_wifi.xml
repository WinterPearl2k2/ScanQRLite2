<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackground"
    tools:context=".Create.item_create.Wifi">
    <RelativeLayout
        android:id="@+id/title_create_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/skyBlueLight"
        android:elevation="5dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="17dp"
            android:paddingBottom="17dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_back" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_title_create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_back"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Create Wifi"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/title_create_wifi"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/container_wifi"
                android:background="@drawable/cus_btn_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="5dp"
                    android:text="Netword name (SSID)"
                    android:textSize="16sp"
                    android:textColor="@color/primaryTextColor"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_network_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    android:padding="15dp"
                    android:hint="Add a name"
                    android:inputType="text"
                    android:textColorHint="@color/secondaryTextColor"
                    android:background="@drawable/cus_edt_text"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Security mode"
                    android:textSize="16sp"
                    android:textColor="@color/primaryTextColor"
                    />

                <RadioGroup
                    android:id="@+id/rdg_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rdb_wpa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WPA/WPA2"
                        android:textSize="16sp"
                        android:paddingLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:button="@drawable/cus_thumb_radio_button"
                        android:textColor="@color/black"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rdb_wep"
                        android:layout_width="wrap_content"
                        android:minWidth="100dp"
                        android:layout_height="wrap_content"
                        android:text="WEP"
                        android:textSize="16sp"
                        android:paddingLeft="10dp"
                        android:button="@drawable/cus_thumb_radio_button"
                        android:textColor="@color/black"/>
                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rdb_none"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="None"
                        android:textSize="16sp"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="20dp"
                        android:button="@drawable/cus_thumb_radio_button"
                        android:textColor="@color/black"/>
                </RadioGroup>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="Password"
                    android:textSize="16sp"
                    android:textColor="@color/primaryTextColor"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edt_network_pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="30dp"
                    android:padding="15dp"
                    android:inputType="textVisiblePassword"
                    android:hint="Add a password"
                    android:textColorHint="@color/secondaryTextColor"
                    android:background="@drawable/cus_edt_text"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/container_wifi"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/cus_create"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:stateListAnimator="@null"
                android:text="Create"
                android:textAllCaps="false"
                android:textColor="@color/primaryTextColor"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
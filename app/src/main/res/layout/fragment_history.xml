<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primaryBackground"
    tools:context=".History.History">

    <TextView
        android:id="@+id/title_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/skyBlueLight"
        android:fontFamily="@font/firasansextracondensed_black"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:paddingRight="20dp"
        android:paddingBottom="8dp"
        android:text="History"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_history"
        android:background="@color/white"
        app:tabIndicatorColor="@color/primaryButton"
        app:tabTextAppearance="@style/MyCustomTextAppearance"
        app:tabTextColor="@color/black">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_scan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Scan" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tab_create"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Create" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/history_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_container"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:elevation="2dp" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting.Setting"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primaryBackground">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_setting">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_general_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="50dp"
                android:paddingBottom="10dp"
                android:text="@string/general_settings"
                android:textColor="@color/brown"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/list_item_1"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txt_general_setting"
                android:background="@drawable/cus_list_setting"
                android:orientation="vertical"
                android:weightSum="7">

                <LinearLayout
                    android:id="@+id/btn_sw_beep"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal"
                    android:weightSum="10">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_beep"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.05"
                            android:text="@string/beep"
                            android:textColor="@color/text_color"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center_vertical"
                            android:layout_marginTop="-3dp"
                            android:letterSpacing="0.05"
                            android:text="@string/beep_when_the_scan_is_successful"
                            android:textColor="@color/text_color_1"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_beep"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:checked="false"
                        android:gravity="center"
                        android:thumb="@drawable/cus_thumb_switch"
                        app:track="@drawable/cus_track_switch" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_sw_vibrate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/txt_vibrate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.05"
                            android:text="@string/vibrate"
                            android:textColor="@color/text_color"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center_vertical"
                            android:layout_marginTop="-3dp"
                            android:letterSpacing="0.05"
                            android:text="@string/vibrate_when_the_scan_is_successful"
                            android:textColor="@color/text_color_1"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_vibrate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:checked="false"
                        android:gravity="center"
                        android:thumb="@drawable/cus_thumb_switch"
                        app:track="@drawable/cus_track_switch" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btn_sw_auto_copy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_auto_copy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/font_regular"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="@string/auto_copy"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_copy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:checked="false"
                        android:gravity="center"
                        android:thumb="@drawable/cus_thumb_switch"
                        app:track="@drawable/cus_track_switch" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/btn_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/font_regular"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="@string/search_engine"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_search"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:fontFamily="@font/firasansextracondensed_black"
                        android:gravity="center"
                        android:letterSpacing="0.03"
                        android:text="Google"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/btn_language"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/txt_language"
                        android:fontFamily="@font/font_regular"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="@string/change_language"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_language"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:fontFamily="@font/firasansextracondensed_black"
                        android:gravity="center"
                        android:letterSpacing="0.03"
                        android:text="@string/english"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/btn_sw_dark_mode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/font_regular"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="@string/dark_mode"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_dark_mode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:checked="false"
                        android:gravity="center"
                        android:thumb="@drawable/cus_thumb_switch"
                        app:track="@drawable/cus_track_switch" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_rate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.05"
                            android:splitMotionEvents="false"
                            android:text="@string/rate_us"
                            android:textColor="@color/text_color"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center_vertical"
                            android:layout_marginTop="-3dp"
                            android:letterSpacing="0.05"
                            android:text="@string/rating_boost_your_app"
                            android:textColor="@color/text_color_1"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_helps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_item_1"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="50dp"
                android:layout_marginBottom="10dp"
                android:text="@string/helps"
                android:textColor="@color/brown"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@id/list_item"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/txt_helps"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/cus_list_setting"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/btn_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:letterSpacing="0.05"
                            android:text="@string/feedback"
                            android:textColor="@color/text_color"
                            android:fontFamily="@font/font_regular"
                            android:textSize="20sp" />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/font_regular"
                            android:gravity="center_vertical"
                            android:layout_marginTop="-3dp"
                            android:letterSpacing="0.05"
                            android:text="@string/report_bugs_and_tell_us"
                            android:textColor="@color/text_color_1"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_version"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="5dp"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="@string/version"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/font_regular"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/title_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:elevation="5dp"
        android:paddingTop="30dp"
        android:background="@color/primaryShrinePink">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/skyBlueLight"
            android:elevation="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/firasansextracondensed_black"
            android:text="@string/tittle_setting"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>
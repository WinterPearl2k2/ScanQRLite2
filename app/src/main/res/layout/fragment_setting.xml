<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting.Setting"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primaryBackground">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/title_Setting"
        android:layout_marginTop="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_general_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="50dp"
                android:paddingBottom="10dp"
                android:text="General settings"
                android:textColor="@color/brown"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/list_item_1"
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txt_general_setting"
                android:background="@drawable/cus_list_setting"
                android:orientation="vertical"
                android:weightSum="6">

                <LinearLayout
                    android:id="@+id/btn_sw_beep"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/txt_beep"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/font_regular"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="Beep"
                        android:textColor="@color/text_color"
                        android:textSize="22sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_beep"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:checked="false"
                        android:gravity="center"
                        android:thumb="@drawable/cus_thumb_switch"
                        app:track="@drawable/cus_track_switch" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/btn_sw_auto_copy"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/font_regular"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="Auto copy the clipboard"
                        android:textColor="@color/text_color"
                        android:textSize="22sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_copy"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:checked="false"
                        android:gravity="center"
                        android:thumb="@drawable/cus_thumb_switch"
                        app:track="@drawable/cus_track_switch" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/font_regular"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="Search engine"
                        android:textColor="@color/text_color"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/txt_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_weight="0"
                        android:fontFamily="@font/firasansextracondensed_black"
                        android:gravity="center"
                        android:letterSpacing="0.03"
                        android:text="Google"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/btn_language"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/txt_language"
                        android:fontFamily="@font/font_regular"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="Change language"
                        android:textColor="@color/text_color"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/txt_language"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:fontFamily="@font/firasansextracondensed_black"
                        android:gravity="center"
                        android:letterSpacing="0.03"
                        android:text="English"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/btn_sw_dark_mode"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/font_regular"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="Dark mode"
                        android:textColor="@color/text_color"
                        android:textSize="22sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sw_dark_mode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:checked="false"
                        android:gravity="center"
                        android:thumb="@drawable/cus_thumb_switch"
                        app:track="@drawable/cus_track_switch" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_rate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:fontFamily="@font/font_regular"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:splitMotionEvents="false"
                        android:text="Rate us"
                        android:textColor="@color/text_color"
                        android:textSize="22sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_helps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/list_item_1"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="50dp"
                android:layout_marginBottom="10dp"
                android:text="Helps"
                android:textColor="@color/brown"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@id/list_item"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@id/txt_helps"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/cus_list_setting"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/btn_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:background="@drawable/cus_item_setting"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="Feedback"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/font_regular"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/verion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="23dp"
                    android:layout_marginRight="23dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_version"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:letterSpacing="0.05"
                        android:text="Version"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/font_regular"
                        android:textSize="22sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/title_Setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/skyBlueLight"
        android:elevation="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:fontFamily="@font/firasansextracondensed_black"
            android:text="Settings"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>